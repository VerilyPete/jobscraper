{
  "universal_keywords": ["python", "remote", "senior"],
  "companies": [
    {
      "name": "Example Company",
      "job_board_url": "https://example.com/careers",
      "keywords": ["backend", "api"]
    },
    {
      "name": "Example Company with Pre-Scrape Actions",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "pre_scrape_actions": [
        {
          "type": "click",
          "selector": "button:has-text('Show All Locations')",
          "wait_for_network_idle": true
        },
        {
          "type": "check",
          "selector": "input[name='remote-only']",
          "wait_for_network_idle": true
        }
      ]
    },
    {
      "name": "Example Company with Repeat Click",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "pre_scrape_actions": [
        {
          "type": "click",
          "selector": "button:has-text('Show More')",
          "wait_after": 2000,
          "repeat_until_gone": true,
          "max_repeats": 50
        }
      ]
    },
    {
      "name": "Example Company with Exclude Filter",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "location_filters": {
        "exclude": ["remote, canada", "canada only"]
      }
    },
    {
      "name": "Example Company with Include Filter",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "location_filters": {
        "include": ["remote, us", "remote - united states", "us and canada"]
      }
    },
    {
      "name": "Example Company with Custom Load State",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "wait_for_load_state": "load"
    },
    {
      "name": "Example Company with Custom Scraping",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "scraping_config": {
        "container_selectors": ["div.job-card", "article.position"],
        "link_selector": "a.job-link",
        "title_selector": "h3.job-title, h2",
        "description_selector": "div.job-description",
        "exclude_patterns": {
          "urls": ["/careers/$", "/careers#", "/search"],
          "titles": ["talent network", "job alert", "filter"]
        },
        "pagination_selectors": ["a[rel='next']", "button.load-more"]
      }
    },
    {
      "name": "Example Company with Iframe Jobs",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "wait_for_load_state": "load",
      "use_iframe": true,
      "pre_scrape_actions": [
        {
          "type": "click",
          "selector": "button:has-text('Accept Cookies')",
          "wait_after": 2000
        }
      ]
    }
  ]
}


