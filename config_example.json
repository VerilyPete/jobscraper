{
  "_comment": "Example configuration showing all available customization options. See README.md for detailed documentation of each field.",
  "universal_keywords": ["python", "remote", "senior"],
  "companies": [
    {
      "name": "Example Company (Basic)",
      "job_board_url": "https://example.com/careers",
      "keywords": ["backend", "api"]
    },
    {
      "name": "Example Company with Cookie Banner & Filters",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "pre_scrape_actions": [
        {
          "type": "click",
          "selector": "button:has-text('Accept all')",
          "wait_after": 1000
        },
        {
          "type": "click",
          "selector": "button:has-text('Show All Locations')",
          "wait_after": 500
        },
        {
          "type": "check",
          "selector": "input[name='remote-only']",
          "wait_after": 1000
        }
      ]
    },
    {
      "name": "Example Company with Load More Button",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "wait_for_load_state": "load",
      "pre_scrape_actions": [
        {
          "type": "click",
          "selector": "button:has-text('Show More Results')",
          "wait_after": 2000,
          "repeat_until_gone": true,
          "max_repeats": 100
        }
      ]
    },
    {
      "name": "Example Company with Dynamic Content",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "wait_for_load_state": "load",
      "pre_scrape_actions": [
        {
          "type": "click",
          "selector": "text=Remote only",
          "wait_after": 1000
        },
        {
          "type": "wait",
          "selector": "[role='region']",
          "timeout": 10000
        }
      ]
    },
    {
      "name": "Example Company with Exclude Filter",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "location_filters": {
        "exclude": ["remote, canada", "canada only"]
      }
    },
    {
      "name": "Example Company with Location Include Filter",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "location_filters": {
        "include": ["remote, us", "remote - united states", "us and canada"]
      }
    },
    {
      "name": "Example Company with Include & Exclude Filters",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "location_filters": {
        "include": ["remote, us"],
        "exclude": ["california", "new york"]
      }
    },
    {
      "name": "Example Company with Custom Scraping",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "scraping_config": {
        "container_selectors": ["div.job-card", "article.position"],
        "link_selector": "a.job-link",
        "title_selector": "h3.job-title, h2",
        "description_selector": "div.job-description",
        "exclude_patterns": {
          "urls": ["/careers/$", "/careers#", "/search"],
          "titles": ["talent network", "job alert", "filter"]
        },
        "pagination_selectors": ["a[rel='next']", "button.load-more"]
      }
    },
    {
      "name": "Example Company with Iframe Jobs",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "wait_for_load_state": "load",
      "use_iframe": true,
      "pre_scrape_actions": [
        {
          "type": "click",
          "selector": "button:has-text('Accept Cookies')",
          "wait_after": 2000
        }
      ]
    },
    {
      "name": "Example Company with Many Pages",
      "job_board_url": "https://example.com/careers",
      "keywords": ["engineer"],
      "max_pages": 50
    }
  ]
}


